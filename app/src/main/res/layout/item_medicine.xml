<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/medicineNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:text="Medicine Name"
        android:textAppearance="?android:textAppearanceMedium" />

    <TextView
        android:id="@+id/dosageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/medicineNameTextView"
        android:layout_marginStart="6dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/medicineNameTextView"
        android:text="Dosage"
        android:textAppearance="?android:textAppearanceSmall" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/medicineNameTextView"
        android:layout_alignStart="@+id/medicineNameTextView"
        android:id="@+id/h2">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/baseline_location_on_24" />

        <TextView
            android:id="@+id/storeNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp"
            android:text="Store Name"
            android:textAppearance="?android:textAppearanceSmall" />
    </LinearLayout>

    <TextView
        android:id="@+id/manufacturerNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/h2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:text="Manufacturer Name"
        android:textAppearance="?android:textAppearanceSmall" />

    <Button
        android:id="@+id/enquireButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dosageTextView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-5dp"
        android:layout_marginEnd="10dp"
        android:text="Enquire"
        android:backgroundTint="#0062FF"
        app:cornerRadius="5dp" />



</RelativeLayout>
